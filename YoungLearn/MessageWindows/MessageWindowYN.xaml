<Window x:Class="YoungLearn.MessageWindows.MessageWindowYN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessageWindowYN" Height="180" Width="360" Style="{StaticResource AsideWindowsStyle}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="Transparent">

    <StackPanel Background="WhiteSmoke">
        <Grid >
            <Rectangle Height="30" Fill="#E0E0E0" MouseMove="Rectangle_MouseMove" />

            <Button HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource NoMouseOverButtonStyle_title}" Margin="0,0,5,0" Name="btn_exit" Click="btn_exit_Click" >
                <TextBlock Style="{StaticResource BarTextBlockStyle}" Text="&#xE947;" FontFamily="Segoe MDL2 Assets" />
            </Button>
        </Grid>
        <TextBlock Name="C1" Text="占位符" HorizontalAlignment="Center" Style="{StaticResource BaseTextBlockStyle}" Margin="24"/>
        <Button x:Name="btn_ConfirmN" Content="取消" Style="{StaticResource NoMouseOverButtonStyle_body}" Click="btn_ConfirmN_Click" Margin="201,0,41.6,0" Width="Auto"/>
        <Button x:Name="btn_ConfirmY" Content="确定" Style="{StaticResource NoMouseOverButtonStyle_body}" Click="btn_ConfirmY_Click" Margin="46,-31,196.6,0" Width="Auto"/>
    </StackPanel>
</Window>

